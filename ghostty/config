#font
font-family = JetBrainsMono Nerd Font
font-size = 18

#theme
theme = xcodedarkhc
# theme = zenwritten_dark
# theme = light:catppuccin-latte,dark:catppuccin-mocha

shell-integration-features = no-cursor,sudo,no-title
cursor-style = block

#close
keybind = cmd+q=close_surface

#split
keybind = cmd+8=new_split:down
keybind = cmd+9=new_split:right

#resize pane
keybind = cmd+shift+right=resize_split:right,40
keybind = cmd+shift+left=resize_split:left,40
keybind = cmd+shift+up=resize_split:up,40
keybind = cmd+shift+down=resize_split:down,40

keybind = ctrl+n=new_tab
keybind = cmd+n=new_tab
keybind = cmd+f=toggle_fullscreen
keybind = cmd+]=toggle_split_zoom

keybind = ctrl+a>n=new_window
keybind = ctrl+a>r=reload_config

#focus pane
keybind = cmd+right=goto_split:right
keybind = cmd+left=goto_split:left
keybind = cmd+down=goto_split:down
keybind = cmd+up=goto_split:up

# keybind = ctrl+c=copy_to_clipboard
window-save-state = always
macos-titlebar-style = transparent

#tabs
keybind = ctrl+a>left=move_tab:-1
keybind = ctrl+a>right=move_tab:1

#quick tab switch
keybind = ctrl+a>1=goto_tab:1
keybind = ctrl+a>2=goto_tab:2
keybind = ctrl+a>3=goto_tab:3
keybind = ctrl+a>4=goto_tab:4
keybind = ctrl+a>5=goto_tab:5
keybind = ctrl+a>6=goto_tab:6
keybind = ctrl+a>7=goto_tab:7
keybind = ctrl+a>8=goto_tab:8
keybind = ctrl+a>9=goto_tab:9

